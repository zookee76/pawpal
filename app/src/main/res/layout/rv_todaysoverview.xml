<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6EAFC"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Today's Overview"
                android:textColor="#0C439E"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/petName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Pet Name:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/petNameText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Callie"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ownerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Owner Name:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/ownerNameText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ashley Corpuz"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/appointmentType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Appointment:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/reqTypeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="General Check-up"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/veterinarian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Veterinarian:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/veterinarianName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dr. Abcdef Ghijklmnop"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reqcardbtns"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <Button
                        android:id="@+id/savebtn"
                        android:layout_width="134dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:backgroundTint="#D6EAFC"
                        android:gravity="center"
                        android:text="Reschedule"
                        android:textColor="@color/black"
                        android:textSize="12.5sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/cancelbtn"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FCD6D6"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="12.5sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/completebtn"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E6FCD6"
                        android:gravity="center"
                        android:text="Complete"
                        android:textColor="@color/black"
                        android:textSize="12.5sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
